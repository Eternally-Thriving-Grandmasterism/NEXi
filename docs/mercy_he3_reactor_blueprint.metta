(= (he3-reactor blueprint)
   (reaction D-He3)
   (aneutronic true)
   (energy-mev 18.3)
   (conversion-efficiency 0.70-0.85)
   (confinement frc-rmf)
   (power-mw 100-10000)
   (mass-tons 300-1200)
   (mercy-gate true))

(= (merciful-he3-operation $power)
